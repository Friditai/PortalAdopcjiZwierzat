@model IEnumerable<PortalAdopcjiZwierzat.Models.Zwierzeta.Zwierze>

@{
    ViewData["Title"] = "Index";
}

<h1>Zwierzęta</h1>

<p>
    <a asp-action="Create">Dodaj zwierzę</a>
</p>
<form asp-controller="Zwierze" asp-action="Index" method="get">
    <p>
        <input type="text" name="SearchString" placeholder="Szukana fraza" />
        <input type="submit" value="Szukaj" />
    </p>
</form>
<form id="sortingForm">
    <label for="sortCategory">Sortuj według:</label>
    <select class="form-control" id="sortCategory">
        <option value="Imię">Imię</option>
        <option value="Wiek">Wiek</option>
    </select>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="sortDirection" id="asc" value="asc" checked/>
        <label class="form-check-label" for="asc">rosnąco</label>
    </div>

    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="sortDirection" id="desc" value="desc" />
        <label class="form-check-label" for="desc">malejąco</label>
    </div>
</form>

<table id="animalTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Adoptowany)
            </th>
            <th class="th-sm sortable" data-column="Imię">
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plec)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Rasa)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Umaszczenie)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.Siersc)
            </th>
            <th class="th-sm sortable" data-column="Wiek">
                @Html.DisplayNameFor(model => model.Wiek)
            </th>
            <th class="th-sm">
                @Html.DisplayNameFor(model => model.ZdjecieUrl)
            </th>
            <th class="th-sm"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Adoptowany)
            </td>
                <td data-column="Imię">
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Umaszczenie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Siersc)
            </td>
                <td data-column="Wiek">
                @Html.DisplayFor(modelItem => item.Wiek)
            </td>
            <td>
                    <img src="@Html.DisplayFor(modelItem => item.ZdjecieUrl)" alt="zwierze" class="img-thumbnail" />
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                    }
                    
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>

